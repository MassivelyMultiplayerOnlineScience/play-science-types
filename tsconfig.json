{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

		"outDir": "dist/",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": false,

    "moduleResolution": "node",
		"resolveJsonModule": true,
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}